  <!-- SERVLETS -->
  <servlet>
  	<servlet-name>Authentication</servlet-name>
  	<servlet-class>be.project.servlets.AuthenticationServlet</servlet-class>
  </servlet>
   <servlet>
  	<servlet-name>Logout</servlet-name>
  	<servlet-class>be.project.servlets.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>SignUp</servlet-name>
  	<servlet-class>be.project.servlets.SignUpServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Home</servlet-name>
  	<servlet-class>be.project.servlets.Home</servlet-class>
  </servlet>
  
   <!-- MAPPING SERVLET -->
  <servlet-mapping>
  	<servlet-name>Authentication</servlet-name>
	  	<url-pattern>/connexion</url-pattern>
	  	<url-pattern>/authentication</url-pattern>
	  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
	 <servlet-name>Logout</servlet-name>
  		<url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>SignUp</servlet-name>
	  	<url-pattern>/signup</url-pattern>
	  	<url-pattern>/sinscrire</url-pattern>
	  	<url-pattern>/inscription</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
  	<servlet-name>Home</servlet-name>
	  	<url-pattern>/home</url-pattern>
	  	<url-pattern>/hub</url-pattern>
	  	<url-pattern>/accueil</url-pattern>
	  	<url-pattern>/</url-pattern>
  </servlet-mapping>

</web-app>